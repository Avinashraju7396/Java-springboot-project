
pipeline {
    agent any

    environment {
        SONARQUBE = 'sonar'
        JAR_NAME = 'datastore-0.0.7.jar'
        SPRING_DATASOURCE_URL = 'jdbc:mysql://database-2.c47808iic91o.us-east-1.rds.amazonaws.com:3306/datastore'
        SPRING_DATASOURCE_USERNAME = 'root'
        SPRING_DATASOURCE_PASSWORD = 'shivakumar'
        APP_PORT = '8084'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/CloudTechDevOps/Java-springboot-project.git'
            }
        }

        stage('Clean & Build') {
            steps {
                sh 'mvn clean package -Dspring.profiles.active=build -DskipTests'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv(SONARQUBE) {
                    sh 'mvn sonar:sonar -DskipTests'
                }
            }
        }

        stage('SonarQube Quality Gate') {
            steps {
                script {
                    def qg = waitForQualityGate()
                    echo "Quality Gate Status: ${qg.status}"
                    if (qg.status != 'OK') {
                        error "‚ùå SonarQube Quality Gate failed."
                    }
                }
            }
        }

        stage('Deploy Backend') {
            steps {
                sh """
                # Kill existing backend process if running
                pkill -f "java.*${WORKSPACE}/target/${JAR_NAME}" || true

                # Ensure logs folder exists
                mkdir -p ${WORKSPACE}/logs

                # Export database credentials
                export SPRING_DATASOURCE_URL=${SPRING_DATASOURCE_URL}
                export SPRING_DATASOURCE_USERNAME=${SPRING_DATASOURCE_USERNAME}
                export SPRING_DATASOURCE_PASSWORD=${SPRING_DATASOURCE_PASSWORD}

                # Start backend in the background
                nohup java -jar ${WORKSPACE}/target/${JAR_NAME} > ${WORKSPACE}/logs/nohup.out 2>&1 &

                # Wait for backend to start
                attempts=0
                until curl -s http://localhost:${APP_PORT}/actuator/health || [ \$attempts -ge 6 ]; do
                    echo "Waiting for backend to start..."
                    sleep 5
                    attempts=\$((attempts+1))
                done

                if [ \$attempts -ge 6 ]; then
                    echo "‚ùå Backend failed to start. Last 50 log lines:"
                    tail -n 50 ${WORKSPACE}/logs/nohup.out
                    exit 1
                fi

                echo "‚úÖ Backend is running on port ${APP_PORT}"
                """
            }
        }
    }

    post {
        success {
            echo "üéâ Backend build, SonarQube check, and deployment completed successfully."
        }
        failure {
            echo "‚ùå Pipeline failed ‚Äî check build logs, SonarQube results, or backend logs."
        }
    }
}
